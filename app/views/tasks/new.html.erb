<% provide(:title, "NewTask") %>
<div class="container">
  <h1>タスク新規作成</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 all">
      <%= form_with(model: @task, url: user_tasks_path(@user),  local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
        <%= f.label :name, class:"label-task" %>
        <%= f.text_field :name, class:"form-control" %>
        
        <%= f.label :description, class:"label-task" %>
        <%= f.text_area :description, rows: 5, class:"form-control" %>
        
        <%= f.submit "新規作成", class:"btn btn-lg btn-primary btn-form" %>
      <% end %>  
    </div>
  </div>
</div>